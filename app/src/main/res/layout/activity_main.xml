<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:padding="10dp">
    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/scrView001"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="8dp">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:text="Floki"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtViewFloki001" android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="@+id/imgViewFloki001"
                    app:layout_constraintEnd_toEndOf="@+id/imgViewFloki001" android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@+id/imgViewFloki001"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@mipmap/vikingslogo"
                    android:id="@+id/imgLogo" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp" tools:ignore="NotSibling"/>
            <TextView
                    android:text="Rollo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtViewRollo001" android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="@+id/imgViewRollo001"
                    app:layout_constraintEnd_toEndOf="@+id/imgViewRollo001" android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@+id/imgViewRollo001"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@mipmap/ragnar"
                    android:id="@+id/imgRagnar" android:layout_marginTop="76dp"
                    app:layout_constraintTop_toBottomOf="@+id/imgLogo"
                    app:layout_constraintStart_toStartOf="@+id/imgLogo"
            />
            <TextView
                    android:text="Ragnar Lothbrok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtViewRagnar" android:textSize="18sp"
                    android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/imgRagnar"
                    app:layout_constraintStart_toStartOf="@+id/imgRagnar"
                    app:layout_constraintEnd_toEndOf="@+id/imgRagnar"/>
            <TextView
                    android:text="Athelstan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtViewAthelstan" android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="@+id/imgViewAtha"
                    app:layout_constraintStart_toStartOf="@+id/imgViewAtha" android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@+id/imgViewAtha" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@mipmap/bjorn"
                    android:id="@+id/imgViewBjorn" app:layout_constraintEnd_toEndOf="@+id/imgViewFloki001"
                    app:layout_constraintStart_toStartOf="@+id/imgViewFloki001" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/txtViewFloki001"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@mipmap/lagertha"
                    android:id="@+id/imgViewLagertha001" app:layout_constraintStart_toEndOf="@+id/imgRagnar"
                    android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginTop="80dp"
                    app:layout_constraintTop_toBottomOf="@+id/imgLogo" app:layout_constraintEnd_toEndOf="@+id/imgLogo"
                    app:layout_constraintHorizontal_bias="1.0"/>
            <TextView
                    android:text="Lagertha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2" android:textSize="18sp"
                    android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/imgViewLagertha001"
                    app:layout_constraintStart_toStartOf="@+id/imgViewLagertha001"
                    app:layout_constraintEnd_toEndOf="@+id/imgViewLagertha001"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@mipmap/rollo"
                    android:id="@+id/imgViewRollo001" app:layout_constraintStart_toStartOf="@+id/imgRagnar"
                    app:layout_constraintEnd_toEndOf="@+id/imgRagnar" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/txtViewRagnar"/>
            <TextView
                    android:text="Bjorn Ironside"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtViewBjorn" android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="@+id/imgViewBjorn"
                    app:layout_constraintEnd_toEndOf="@+id/imgViewBjorn" android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@+id/imgViewBjorn" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@mipmap/floki"
                    android:id="@+id/imgViewFloki001" app:layout_constraintStart_toStartOf="@+id/imgViewLagertha001"
                    app:layout_constraintEnd_toEndOf="@+id/imgViewLagertha001" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView2"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@mipmap/athelstan"
                    android:id="@+id/imgViewAtha" app:layout_constraintStart_toStartOf="@+id/imgViewRollo001"
                    app:layout_constraintEnd_toEndOf="@+id/imgViewRollo001" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/txtViewRollo001"/>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
