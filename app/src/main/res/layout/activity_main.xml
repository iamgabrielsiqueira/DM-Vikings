<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:padding="10dp">
    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/scrView001"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="8dp">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:text="Floki"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtViewPersonagemNome" android:textSize="18sp"
                    android:layout_marginTop="12dp"
                    app:layout_constraintStart_toStartOf="@+id/imgBtFloki"
                    app:layout_constraintEnd_toEndOf="@+id/imgBtFloki"
                    app:layout_constraintTop_toBottomOf="@+id/imgBtFloki"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@mipmap/vikingslogo"
                    android:id="@+id/imgLogo" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp" tools:ignore="NotSibling"/>
            <TextView
                    android:text="Rollo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtViewPersonagemNome" android:textSize="18sp"
                    android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/imgBtRollo"
                    app:layout_constraintEnd_toEndOf="@+id/imgBtRollo"
                    app:layout_constraintStart_toStartOf="@+id/imgBtRollo"/>
            <TextView
                    android:text="Ragnar Lothbrok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtViewRagnar" android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="@+id/imgBtRagnar"
                    app:layout_constraintEnd_toEndOf="@+id/imgBtRagnar" android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@+id/imgBtRagnar"/>
            <TextView
                    android:text="Athelstan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtViewAthelstan" android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/imgBtAthelstan"
                    app:layout_constraintEnd_toEndOf="@+id/imgBtAthelstan"
                    app:layout_constraintStart_toStartOf="@+id/imgBtAthelstan" android:layout_marginBottom="8dp"/>
            <TextView
                    android:text="Lagertha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2" android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="@+id/imgBtLagertha"
                    app:layout_constraintEnd_toEndOf="@+id/imgBtLagertha" android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@+id/imgBtLagertha"/>
            <TextView
                    android:text="Bjorn Ironside"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtViewBjorn" android:textSize="18sp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/imgBtBjorn"
                    app:layout_constraintEnd_toEndOf="@+id/imgBtBjorn"
                    app:layout_constraintStart_toStartOf="@+id/imgBtBjorn"/>
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@mipmap/ragnar"
                    android:id="@+id/imgBtRagnar" app:layout_constraintStart_toStartOf="@+id/imgLogo"
                    android:layout_marginTop="60dp"
                    app:layout_constraintTop_toBottomOf="@+id/imgLogo"/>
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@mipmap/lagertha"
                    android:id="@+id/imgBtLagertha" app:layout_constraintEnd_toEndOf="@+id/imgLogo"
                    android:layout_marginTop="60dp"
                    app:layout_constraintTop_toBottomOf="@+id/imgLogo"/>
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@mipmap/rollo"
                    android:id="@+id/imgBtRollo" app:layout_constraintStart_toStartOf="@+id/imgBtRagnar"
                    app:layout_constraintEnd_toEndOf="@+id/imgBtRagnar" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/txtViewRagnar"/>
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@mipmap/floki"
                    android:id="@+id/imgBtFloki" app:layout_constraintStart_toStartOf="@+id/imgBtLagertha"
                    app:layout_constraintEnd_toEndOf="@+id/imgBtLagertha" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView2"/>
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@mipmap/athelstan"
                    android:id="@+id/imgBtAthelstan" app:layout_constraintStart_toStartOf="@+id/imgBtRollo"
                    app:layout_constraintEnd_toEndOf="@+id/imgBtRollo" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/txtViewPersonagemNome"/>
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@mipmap/bjorn"
                    android:id="@+id/imgBtBjorn"
                    app:layout_constraintStart_toStartOf="@+id/imgBtFloki"
                    app:layout_constraintEnd_toEndOf="@+id/imgBtFloki" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/txtViewPersonagemNome"/>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
